<div class="page-header">
  <h1>Friendships</h1>

<div class="page-header">
  <h2>
    Sent Friendhsips
    <a href="/friendships/new" class="btn btn-med btn-success">New Friendship</a>
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Receiver</th>
        <th>Sender</th>
        <th>Actions</th>
      </tr>

        <% Friendship.where(:sender_id => current_user.id).each do |friendship| %>
      <tr>
        <td><%= friendship.receiver.email %></td>
        <td><%= friendship.sender.email %></td>
        <td>
          <a href="/delete_friendship/<%= friendship.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<div>
  <h2>
    Received Friendships
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Receiver</th>
        <th>Sender</th>
        <th>Actions</th>
      </tr>

        <% Friendship.where(:receiver_id => current_user.id).each do |friendship| %>
      <tr>
        <td><%= friendship.receiver.email %></td>
        <td><%= friendship.sender.email %></td>
        <td>
          <a href="/delete_friendship/<%= friendship.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="page-header">
  <h2>
    All User Friendships
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Receiver</th>
        <th>Sender</th>
      </tr>

      <% @friendships.each do |friendship| %>
      <tr>
        <td><%= friendship.receiver.email %></td>
        <td><%= friendship.sender.email%></td>
        <td>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

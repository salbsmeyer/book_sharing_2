<div class="page-header">
  <h1>
    My Friends
    <a href="/friendships/new" class="btn btn-lg btn-success">New Friendship</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Receiver</th>
        <th>Sender</th>
        <th>Actions</th>
      </tr>

        <% Friendship.where(:receiver_id => current_user.id).each do |friendship| %>
      <tr>
        <td><%= friendship.receiver_id %></td>
        <td><%= friendship.sender_id %></td>
        <td>
          <a href="/friendships/<%= friendship.id %>" class="btn btn-primary">Show</a>
          <a href="/friendships/<%= friendship.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_friendship/<%= friendship.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="page-header">
  <h1>
    All Friendships
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Receiver</th>
        <th>Sender</th>
        <th>Actions</th>
      </tr>

      <% @friendships.each do |friendship| %>
      <tr>
        <td><%= friendship.receiver_id %></td>
        <td><%= friendship.sender_id %></td>
        <td>
          <a href="/friendships/<%= friendship.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

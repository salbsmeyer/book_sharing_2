<!-- Validation failure messages -->
<% if @friendship.errors.any? %>
  <% @friendship.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Friendship #<%= @friendship.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_friendship/<%= @friendship.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for receiver_id -->
      <div class="form-group">
        <label for="receiver_id" class="control-label">
          Receiver
        </label>

     <%= select_tag(:receiver_id, options_from_collection_for_select(User.all, :id, :username, @friendship.receiver_id), :class => "form-control") %>
      </div>

      <!-- Label and input for sender_id -->
      <div class="form-group">
        <label for="sender_id" class="control-label">
          Sender
        </label>

   <%= select_tag(:sender_id, options_from_collection_for_select(User.all, :id, :username, @friendship.sender_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Friendship
      </button>
      or
      <a href="/friendships/<%= @friendship.id %>">Cancel</a>
    </form>
  </div>
</div>

<div class="page-header">
  <h1>
    User books
    <a href="/user_books/new" class="btn btn-lg btn-success">New User book</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Rating</th>
        <th>User</th>
        <th>Available</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @user_books.each do |user_book| %>
      <tr>
        <td><% user_book.image %></td>
        <td><%= user_book.title %></td>
        <td><%= user_book.author %></td>
        <td><%= user_book.genre %></td>
        <td><%= user_book.rating %></td>
        <td><%= user_book.user %></td>
        <td><%= user_book.available %></td>
        <td><%= user_book.notes %></td>
        <td>
          <a href="/user_books/<%= user_book.id %>" class="btn btn-primary">Show</a>
          <a href="/user_books/<%= user_book.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user_book/<%= user_book.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
